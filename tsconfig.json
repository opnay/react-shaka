{
  "compilerOptions": {
    "outDir": "./dist/",
    "jsx": "react",
    "sourceMap": false,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "module": "es6",
    "moduleResolution": "node",
    "target": "es5",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["DOM", "ES2020"],
    "typeRoots": ["./types"]
  },
  "include": ["src", "types"],
  "exclude": ["node_modules", "src/**/*.stories*"]
}
